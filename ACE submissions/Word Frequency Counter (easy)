a = input("enter text ")
b = a.lower()
c = [",", ".", "!", "(", ")", "?", "'", '"']
d = ""
for i in b:
    if i not in c:
        d += i
f = d.split()
e = {}
for j in f:
    if j in e:
        e[j] += 1
    else:
        e[j] = 1
print("WORD | FREQUENCY\n")
for k in range(3):
    if e:
        m = max(e, key=e.get)
        print(m, "--->", e[m])
        del e[m]
