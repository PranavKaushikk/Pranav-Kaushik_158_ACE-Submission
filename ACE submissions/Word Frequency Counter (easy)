a ="""
"""

b = a.lower()
c = [",", ".", "!", "(", ")", "?", "'", '"']
d = ""
for i in b:
    if i not in c:
        d += i
e={}
f = d.split()

for j in e:
    if j in e:
        e[j] += 1
    else:
        e[j] = 1

print("WORD | FREQUENCY\n")
for k in range(3):
    m = max(e, key=e.get)
    print(m, "--->", e[m])
    del e[m]
